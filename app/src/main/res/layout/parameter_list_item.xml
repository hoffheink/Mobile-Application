<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/parameter_icon_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/lab" />

    <TextView
        android:id="@+id/parameter_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/parameter_icon_imageView"
        android:text="Parameter Name"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/parameter_content_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parameter_name_textView"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/parameter_icon_imageView"
        app:layout_constraintLeft_toRightOf="@id/parameter_icon_imageView"
        app:layout_constraintTop_toBottomOf="@id/parameter_name_textView" />

</RelativeLayout>